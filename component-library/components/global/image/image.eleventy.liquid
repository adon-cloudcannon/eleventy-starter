{% if env_bookshop_live %}

    <img class="c-image--live-editing" src="{{ image }}" alt="{{ image_alt }}">

{% elsif image contains 'http://' or image contains 'https://' %}

    <img class="c-image" src="{{ image }}" alt="{{ image_alt }}">

{% else %}

    {%- assign sizes = "100vw" %}
    {% image image, image_alt, sizes, true %}

{% endif %}

